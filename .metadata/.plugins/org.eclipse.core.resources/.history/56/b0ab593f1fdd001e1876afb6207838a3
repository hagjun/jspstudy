					<tr align="center">
						<td colspan="2">
							<input type="hidden" name="id" value="${id}">
							<input type="hidden" name="pwd" value="${pwd}">
							<input type="hidden" name="cmd" value="login_ok">
							<input type="button" value="로그인"   onclick="login_go(this.form)" />
