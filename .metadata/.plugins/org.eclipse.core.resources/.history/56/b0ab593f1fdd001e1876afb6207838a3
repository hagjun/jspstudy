<script type="text/javascript">
	function login_go(f) {
		// 검사
		f.action = "/01_servlet/Member";
		f.submit();
		
		const id = "${id}"
		const id2 = f.id.value;
		
		if(id == id2){
			f.action = "/01_servlet/Member";
			f.submit();
			alert("로그인완료");
		} else{
			alert("로그인실패");
			f.id.value="";
			f.id.focus();
			return;
		}
	}
</script>
